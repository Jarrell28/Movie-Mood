<div class="container">
    <h1 class="h2 mt-4">Account Details</h1>

    <form id="accountForm">

        <div class="form-group">
            <label for="accountUsername">Username</label>
            <input type="text" class="form-control" id="accountUsername" aria-describedby="usernameHelp"
                value={{user.username}}>
        </div>

        <div class="form-group">
            <label for="accountEmail">Email address</label>
            <input type="email" class="form-control" id="accountEmail" aria-describedby="emailHelp"
                value={{user.email}}>
        </div>
        <div class="form-group">
            <label for="accountPassword">Password</label>
            <input type="password" class="form-control" id="accountPassword" value="{{user.password}}">
        </div>
        <button type="submit" class="btn btn-info">Update</button>

    </form>

    <h2 class="mt-5">Favorites</h2>



</div>